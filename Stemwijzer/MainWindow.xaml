<Window x:Class="Stemwijzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stemwijzer"
        mc:Ignorable="d"
        Title="Stemwijzer" Height="500" Width="950">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="Resources/background.jpg"/>
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="15" MaxHeight="32" Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition MinHeight="28" MaxHeight="50" Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition MinWidth="70" Width="*"/>
                <ColumnDefinition MinWidth="70" Width="*"/>
                <ColumnDefinition MinWidth="70" Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton Checked="Partijen_OnChecked" IsChecked="True" Grid.Column="0" GroupName="TabelSwitch" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Partijen" Foreground="Black" FontWeight="Bold"/>
                <RadioButton Checked="Themas_OnChecked" Grid.Column="1" GroupName="TabelSwitch" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Thema's" Foreground="Black" FontWeight="Bold"/>
                <RadioButton Checked="Standpunten_OnChecked" Grid.Column="2" GroupName="TabelSwitch" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Standpunten" Foreground="Black" FontWeight="Bold"/>
                <RadioButton Checked="Verkiezingssoorten_OnChecked" Grid.Column="3" GroupName="TabelSwitch" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Verkiezingssoorten" Foreground="Black" FontWeight="Bold"/>
                <RadioButton Checked="Verkiezingen_OnChecked" Grid.Column="4" GroupName="TabelSwitch" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Verkiezingen" Foreground="Black" FontWeight="Bold"/>
                <RadioButton Checked="Verkiezingspartijen_OnChecked" Grid.Column="5" GroupName="TabelSwitch" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Verkiezingspartijen" Foreground="Black" FontWeight="Bold"/>
            </Grid>

            <DataGrid Name ="Partijen" FontSize="13" AutoGenerateColumns="False" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="1" Grid.RowSpan="4" Margin="0,0,0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding partij_id}" IsReadOnly="True" Header="Partij ID" Width="0.5*"/>
                    <DataGridTextColumn Binding="{Binding naam}" Header="Naam" Width="*"/>
                    <DataGridTextColumn Binding="{Binding adres}" Header="Adres" Width="*"/>
                    <DataGridTextColumn Binding="{Binding postcode}" Header="Postcode" Width="*"/>
                    <DataGridTextColumn Binding="{Binding gemeente}" Header="Gemeente" Width="*"/>
                    <DataGridTextColumn Binding="{Binding emailadres}" Header="E-mail adres" Width="1.5*"/>
                    <DataGridTextColumn Binding="{Binding telefoonnummer}" Header="Telefoonnummer" Width="1.5*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Visibility="Hidden" Name ="Themas" FontSize="13" AutoGenerateColumns="False" Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="4" Margin="0,0,0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding thema_id}" IsReadOnly="True" Header="Thema ID" Width="3*"/>
                    <DataGridTextColumn Binding="{Binding thema}" Header="Thema" Width="8*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Visibility="Hidden" Name ="Standpunten" FontSize="13" AutoGenerateColumns="False" Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="4" Margin="0,0,0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding standpunt_id}" IsReadOnly="True" Header="Standpunt ID" Width="*"/>
                    <DataGridTextColumn Binding="{Binding thema_id}" Header="Thema ID" Width="*"/>
                    <DataGridTextColumn Binding="{Binding standpunt}" Header="Standpunt" Width="6*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Visibility="Hidden" Name ="Verkiezingssoorten" FontSize="13" AutoGenerateColumns="False" Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="4" Margin="0,0,0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding verkiezingsoort_id}" IsReadOnly="True" Header="Verkiezingsoort ID" Width="3*"/>
                    <DataGridTextColumn Binding="{Binding verkiezingsoort}" Header="Verkiezingsoort" Width="8*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Visibility="Hidden" Name ="Verkiezingen" FontSize="13" AutoGenerateColumns="False" Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="4" Margin="0,0,0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding verkiezing_id}" IsReadOnly="True" Header="Verkiezing ID" Width="*"/>
                    <DataGridTextColumn Binding="{Binding verkiezingsoortID}" Header="Verkiezingsoort ID" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding datum}" Header="Datum" Width="5*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Visibility="Hidden" Name ="Verkiezingspartijen" FontSize="13" AutoGenerateColumns="False" Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="4" Margin="0,0,0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding partij_id}" IsReadOnly="True" Header="Partij ID" Width="*"/>
                    <DataGridTextColumn Binding="{Binding verkiezingID}" Header="Verkiezing ID" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!--<Button Grid.Column="1" Grid.Row="5" Content="Toevoegen" Foreground="White" FontWeight="Medium">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF4C70"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF6584"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="100" Height="25" CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>-->

            <Button Name="addButton" Grid.Column="2" Grid.Row="5" Click="addButton_Click" Content="Toevoegen" Margin="4"/>
            <Button Name="updateButton" Grid.Column="3" Grid.Row="5" Click="UpdateButton_Click" Content="Bijwerken" Margin="4"/>
            <Button Name="deleteButton" Grid.Column="4" Grid.Row="5" Click="Delete_Click" Content="Verwijderen" Margin="4"/>
        </Grid>
    </Grid>
</Window>
